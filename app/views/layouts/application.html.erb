<!DOCTYPE html>
<html>
  <head>
    <title>TecOurBlog200905</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='header'>
      <div class='header__title'>
        <%= link_to "Our Blog", root_path, class:"header__title--text", method: :get %>
      </div>
      <div class="header__right">
        <% if user_signed_in? %>
          <%= link_to "新規投稿", new_post_path, class:"header__right--btn", method: :get %>
          <%= link_to "ログアウト", destroy_user_session_path, class:"header__right--btn", method: :delete %>
        <% else %>
          
          <%= link_to "ログイン", new_user_session_path, class:"header__right--btn", method: :get %>
          <%= link_to "新規登録", new_user_registration_path, class:"header__right--btn", method: :get %>
        <% end %>
      </div>
    </header>
    <div class='contents'>
      <%= yield %>
    </div>
  </body>
</html>
